# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/ptrace/version.rb'

Hoe.new('ptrace-ffi', FFI::PTrace::VERSION) do |p|
  p.rubyforge_name = 'ptrace-ffi'
  p.developer('Postmodern','postmodern.mod3@gmail.com')
  p.remote_rdoc_dir = ''
  p.extra_deps = [['ffi', '>=0.4.0']]
end

